{% extends 'base.html.twig' %}

{% block title %}Create New Author{% endblock %}

{% block body %}

<div class="container">
   <div class="row justify-content-center">
       <div class="col-md-8">
           <div class="card">
               <div class="card-header color-head">Create New Authour</div>
               <div class="card-body bck">
                     <form action="{{path('author_store')}}" method="POST">
                        <div class="form-group">
                                <label>Name:</label>
                                <input type="text" class="form-control" name="author_name" value="{{author_name}}">
                                <small class="form-text text-muted">Author name.</small>
                            </div>

                            <div class="form-group">
                                <label>Surname:</label>
                                <input type="text" class="form-control" name="author_surname" value="{{author_surname}}">
                                <small class="form-text text-muted">Author name.</small>
                            </div>
                            <input type="hidden" name="token" value="{{ csrf_token('create_author_hidden') }}"/>
                            <button type="submit" class="edit btn btn-primary btn-block">Add new author</button>
                        </div>   
                    </form>
               </div>
           </div>
       </div>
   </div>
</div>
 
{% endblock %}