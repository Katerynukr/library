{% extends 'base.html.twig' %}

{% block title %}Modify Author Data
{% endblock %}

{% block body %}


	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card fraim">
					<div class="card-header head-color">
						<h1>Modify Author Data</h1>
					</div>

					<div class="card-body bck">
						<form action="{{path('author_update', {id: author.id})}}" method="POST">
							<div class="form-group">
								<label>Name:
								</label>
								<input type="text" class="form-control" name="author_name" value="{{author.name}}">
								<small class="form-text text-muted">Book title.</small>
							</div>
							<div class="form-group">
								<label>Surname:
								</label>
								<input type="text" class="form-control" name="author_surname" value="{{author.surname}}">
								<small class="form-text text-muted">Book title.</small>
							</div>

							<input type="hidden" name="token" value="{{ csrf_token('create_author_hidden_update') }}"/>
							<button type="submit" class="btn save-btn btn-block">Edit Author</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


